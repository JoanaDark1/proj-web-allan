<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página do Usuário - <%= nome %>
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Oxanium:wght@200..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="/css/user_profile.css">

</head>

<body>
     <div class="main-container">
        <div class="profile-header">
            <% if (tipo !='admin' ) { %>
                <div class="profile-pic-container">
                    <img id="profileImage" src="<%= foto_perfil %>" alt="Foto de perfil">
                    <i class="fa-solid fa-pencil edit-icon" id="editProfilePic"></i>
                    <input type="file" id="fileInput" accept="image/*" style="display: none;">
                </div>
            <% } %>

            <div class="user-info">
                <h1><%= nome %></h1>
                <div class="user-details">
                    <% if (tipo==='medico' ) { %>
                        <p><strong>CRM:</strong> <%= crm %></p>
                        <% if (especialidade1) { %>
                            <p><strong>Especialidade:</strong> <%= especialidade1 %> (<%= rqe1 ? `RQE: ${rqe1}` : 'RQE não informado' %>)</p>
                        <% } %>
                         <% if (especialidade2) { %>
                            <p><strong>Especialidade 2:</strong> <%= especialidade2 %> (<%= rqe2 ? `RQE: ${rqe2}` : 'RQE não informado' %>)</p>
                        <% } %>
                    <% } else if (tipo==='enfermeiro' ) { %>
                        <p><strong>COREN:</strong> <%= coren %></p>
                        <% if (especialidade1) { %>
                            <p><strong>Especialidade:</strong> <%= especialidade1 %></p>
                        <% } %>
                    <% } else if (tipo==='gestor' ) { %>
                        <p><strong>Empresa/Hospital:</strong> <%= empresa_hospital %></p>
                    <% } %>
                </div>
            </div>
        </div>
    
    <% if (tipo==='medico' || tipo==='enfermeiro' ) { %>
        <div class="certificate-section">
            <h2>Meus Certificados</h2>
            
            <button id="toggleAddCertificateBtn" class="btn btn-info mb-3">Adicionar Novo Certificado</button>

            <div id="addCertificateWrapper" style="display: none;">
                <h3>Adicionar Novo Certificado</h3>
                <form id="addCertificateForm">
                    <input type="hidden" name="userId" value="<%= id %>">
                    <input type="hidden" name="userType" value="<%= tipo %>">

                    <div class="form-group">
                        <label for="titulo">Título:</label>
                        <input type="text" class="form-control" id="titulo" name="titulo" required>
                    </div>
                    <div class="form-group">
                        <label for="data_emissao">Data de Emissão:</label>
                        <input type="date" class="form-control" id="data_emissao" name="data_emissao" required>
                    </div>
                    <div class="form-group">
                        <label for="carga_horaria">Carga Horária (horas):</label>
                        <input type="number" class="form-control" id="carga_horaria" name="carga_horaria" required>
                    </div>
                    <div class="form-group">
                        <label for="tipo_certificado">Tipo de Certificado:</label>
                        <select class="form-control" id="tipo_certificado" name="tipo_certificado" required>
                            <option value="">Selecione</option>
                            <option value="curso">Curso</option>
                            <option value="congresso">Congresso</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Adicionar Certificado</button>
                </form>
            </div>

            <h3 class="mt-4">Certificados Cadastrados</h3>
            <div class="certificate-list">
                <% if (certificados && certificados.length > 0) { %>
                    <% certificados.forEach(cert => { %>
                        <div class="certificate-item">
                            <h5><%= cert.titulo %></h5>
                            <p>Data de Emissão: <%= new Date(cert.data_emissao).toLocaleDateString('pt-BR') %></p>
                            <p>Carga Horária: <%= cert.carga_horaria %> horas</p>
                            <p>Tipo: <%= cert.tipo_certificado %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>Nenhum certificado cadastrado ainda.</p>
                <% } %>
            </div>
        </div>
    <% } %>

    <a href="/">Sair</a>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const editButton = document.getElementById('editProfilePic');
            const fileInput = document.getElementById('fileInput');
            const profileImage = document.getElementById('profileImage');
            const addCertificateForm = document.getElementById('addCertificateForm');
            
            // so aparece o campo de adicionar certificado se clicar no botao
            const toggleAddCertificateBtn = document.getElementById('toggleAddCertificateBtn');
            const addCertificateWrapper = document.getElementById('addCertificateWrapper');

            if (toggleAddCertificateBtn && addCertificateWrapper) {
                toggleAddCertificateBtn.addEventListener('click', () => {
                    // Verifica se o formulário está visível
                    if (addCertificateWrapper.style.display === 'none') {
                        addCertificateWrapper.style.display = 'block'; // Mostra o formulário
                        toggleAddCertificateBtn.textContent = 'Cancelar'; // Muda o texto do botão
                    } else {
                        addCertificateWrapper.style.display = 'none'; // Esconde o formulário
                        toggleAddCertificateBtn.textContent = 'Adicionar Novo Certificado'; // Volta o texto original
                    }
                });
            }


            // Lógica de upload de foto de perfil
            if (editButton && fileInput) {
                editButton.addEventListener('click', () => {
                    fileInput.click();
                });
            }

            if (fileInput && profileImage) {
                fileInput.addEventListener('change', (event) => {
                    const file = event.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = (e) => {
                            profileImage.src = e.target.result;
                            uploadProfilePicture(file);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            function uploadProfilePicture(file) {
                const formData = new FormData();
                formData.append('profilePic', file);
                formData.append('userId', '<%= id %>');
                formData.append('userType', '<%= tipo %>');

                fetch('/upload-profile-pic', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Foto de perfil atualizada com sucesso!');
                    } else {
                        alert('Erro ao atualizar foto de perfil: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Erro na requisição de upload:', error);
                    alert('Ocorreu um erro ao enviar a foto.');
                });
            }

            // Lógica para adicionar certificado
            if (addCertificateForm) {
                addCertificateForm.addEventListener('submit', (event) => {
                    event.preventDefault(); // Impede o envio padrão do formulário

                    const formData = new FormData(addCertificateForm);
                    const certificateData = {};
                    formData.forEach((value, key) => {
                        certificateData[key] = value;
                    });

                    fetch('/add-certificate', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(certificateData)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Certificado adicionado com sucesso!');
                            location.reload(); // Recarrega a página para ver o novo certificado
                        } else {
                            alert('Erro ao adicionar certificado: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Erro na requisição de adicionar certificado:', error);
                        alert('Ocorreu um erro ao adicionar o certificado.');
                    });
                });
            }
        });
    </script>
</body>

</html>